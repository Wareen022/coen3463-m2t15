extends layout

block content
    .container.has-text-centered
        .column.is-12
            .title.is-2
              h2 We are just one email away.              
            h2.subtitle.is-5
              |Feel free to email us if you have a question or you want to inquire.             
            img.promo-img(src='/images/logo.jpg', height='200px')    
          br

        .columns.is-vcentered
          .column.is-10.is-offset-1
            .box
              label.label Name                  
              p.control
                input.input(type='text', placeholder='John Smith')                    
              label.label Email

              p.control
                input.input(type='text', placeholder='jsmith@example.org')

              textarea.textarea(placeholder='Leave a message...')

            p.control.has-addons.has-text-centered.columns
              center
                a.button.is-large.is-danger.is-outlined Send
